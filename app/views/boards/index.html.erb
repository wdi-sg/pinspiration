<div class="card-deck">
<% @boards.each do |board| %>

 <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= link_to board.title, board_path(board) %> </h5>
    <h6 class="card-subtitle mb-2 text-muted"> <%= board.pins.count %> pins </h6>
    <p class="card-text"> <%= board.description%> </p>
  </div>
      <div class="card-footer">
      <small class="text-muted">Board by @<%=board.user.username%> | Created <%= time_ago_in_words(board.updated_at) %> ago </small>
    </div>
</div>
    <% end %>
    </div>