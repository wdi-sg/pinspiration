<h1>Editing Comment</h1>

<%= form_for([@pin, @comment]) do |form| %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>
  <div class="field">
    <%= form.hidden_field(:user_id, value: current_user.id)
    %>
  </div>
  <div class="actions">
    <%= form.submit  "Update Comment"%>
  </div>
<% end %>
<%= link_to 'Back to Dashboard', root_path %>
