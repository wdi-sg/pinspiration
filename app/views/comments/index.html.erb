<div style="width:1300px; margin:0 auto;">
<h2>Dashboard</h2>
	<div class="col">
			<div class="row">
<div class="card-group">
<% @pin.each do |pin| %>
<div class="card", style="max-width: 12rem;">
<%= link_to pin_path(pin.id) do %>
<%=image_tag pin.media_url, :class=>"card-img-top"%>
	    <%end%>
	    <h5 class="card-title text-center"><%= pin.title%></h5>
	    <p class="card-body">
	    	<strong><u>Comments</u></strong><br>
<% pin.comment.each do |comment| %>
<strong><%= comment.user.username%></strong><br>
<%= comment.body%><br>
<% end %>
</p>
</div>
</div>
<% end %>

</div>
</div>
</div>