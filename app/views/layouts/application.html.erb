<!DOCTYPE html>
<html>
  <head>
    <title>Pinspiration</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'https://cdn.jsdelivr.net/npm/boxicons@2.0.4/css/boxicons.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Pinspiration</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><%= link_to "Home", root_path %></li>
        </ul>
         <ul class="navbar-nav mr-auto">
          <li class="nav-item"><%= link_to "Create Post", new_post_path %></li>
        </ul>
        <ul class="navbar-nav mr-2">
          <li class="nav-item"><%= link_to 'Log In', new_user_session_url %></li>
        </ul>
        <ul class="navbar-nav mr-2">
          <li class="nav-item"><%= link_to 'Log Out', destroy_user_session_url, method: :delete %></li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
