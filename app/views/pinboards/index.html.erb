<p id="notice"><%= notice %></p>

<h1>Pinboards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pinboards.each do |pinboard| %>
      <tr>
        <td><%= pinboard.title %></td>
        <td><%= pinboard.user %></td>
        <td><%= link_to 'Show', pinboard %></td>
        <td><%= link_to 'Edit', edit_pinboard_path(pinboard) %></td>
        <td><%= link_to 'Destroy', pinboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pinboard', new_pinboard_path %>
