<%= form_with(model: pin, local: true) do |form| %>
  <% if pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% pin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div><%= form.label :title, "Title:" %></div>
    <%= form.text_field :title, class:"form-control"%>
  </div>

  <div class="field">
    <div><%= form.label :image, "Image URL:" %></div>
    <%= form.text_field :image, class:"form-control" %>
  </div>

  <div class="mb-2">Select Tags:</div>
  <%= form.collection_check_boxes :tag_ids, @tags, :id, :tagname do |tag| %>
    <div>
      <%= tag.check_box %> #<%= tag.label %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Create Pin", class:"btn btn-primary" %>
  </div>
<% end %>