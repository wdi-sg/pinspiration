<h1>Edit pin</h1>

<%= form_with scope: :pin, model: @pin, local: true do |form| %>

  <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>
  
    <p>
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', root_path %>