<h2>Edit Pin</h2>

<%= form_with scope: :pin, model: @pin, local: true do |form| %>
	<p>
		<%= form.label :title %><br>
		<%= form.text_field :title %>
	</p>

	<p>
		<%= form.label :image %><br>
		<%= form.file_field :image %>
	</p>

	<p>
		<%= form.label :caption %><br>
		<%= form.text_area :caption %>
	</p>
<% end %>