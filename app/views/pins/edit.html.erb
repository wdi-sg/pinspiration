<div class="container">

	<h1 class="display-4 text-center">Edit Pin:</h1>

  <% if @pin.errors.any? %>

		<p class="error text-center mt-5">
		  Error: Title <%= show_errors(@pin, :title) %>
		</p>

	<% else %>

		<div class="card text-center ml-auto mr-auto mb-5" style="width: 20rem;">
			<% time = @pin.created_at.localtime(utc_offset = nil) %>
		  <img class="card-img-top" alt="image pin" src=<%= @pin.image %> >
		  <div class="card-body">
		    <h5 class="card-title"><%= @pin.title %></h5>
			  <footer class="blockquote-footer">created at <cite title="Source Title"><%= @pin.created_at.day %>/<%= @pin.created_at.month %>/<%= @pin.created_at.year %> <%= time.strftime("%I:%M %p") %></cite></footer>
		  </div>
		</div>

  <% end %>




	<%= form_with scope: :pin, model: @pin, local: true do |form| %>
		<div class="form-group mt-5 mb-5" style="width: 50%; margin: 0 auto">

		  <p>
		    <%= form.label :title %><br>
		    <%= form.text_field :title, {:class => "form-control", :required => true} %>
		    <small class="form-text text-muted">3 to 40 characters</small>
		  </p>

		  <p>
		    <%= form.label :image %><br>
		    <%= form.url_field :image, {:class => "form-control", :required => true} %>
		  </p>



			<%= link_to 'Back', pin_path(@pin), {:class => "btn btn-outline-secondary"} %>

		  <%= form.submit "Save Pin", class: "btn btn-primary" %>

		</div>
	<% end %>

</div>