<h2>Edit Pin</h2>
<br>
<%= form_with scope: :pin, model: @pin, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
  	<%= form.label :image %><br>
  	<%= form.text_field :image_url, placeholder: 'Enter image URL' %>
  </p>
  <br>
  <p>
  	<%= form.submit :class => "btn btn-primary" %>
  	<%= link_to 'Back', pins_path, :class => "btn btn-dark" %>
  </p>
<% end %>