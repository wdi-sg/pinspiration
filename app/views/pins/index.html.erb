<p id="notice"><%= notice %></p>
<h1>Pinspiration</h1>
<div class="card-deck row">
  <% @pins.each do |pin| %>
    <div class="col-3">
      <div class="card">
        <img class="card-img-top" src=<%= pin.image%> alt="Card image cap" width="200px" height="200px">
        <div class="card-body">
          <h5 class="card-title">
            <%= pin.title %>
          </h5>
          <% @user = User.find(pin.user_id) %>
          <p class="card-text"><small class="text-muted">
              <%= @user.email %> | 
              <%= pin.created_at.getlocal.strftime("%d %B %Y, %H:%M") %>
            </small></p>
          <p class="card-text">Comments: 
            <%= pin.comment.length %>
          </p>
          <div>
            <p>
              <% pin.tags.each do |tag| %>
                <% str = "#" + tag.tagname %>
                <%= link_to str, tag_path(tag), class:"text-primary" %>&nbsp;
              <% end %>
            </p>
          </div>
          <div class="card-footer">
            <p class="mb-0 text-center">
              <%= link_to 'Show', pin %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>