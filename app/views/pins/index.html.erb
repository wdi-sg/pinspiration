<p id="notice"><%= notice %></p>

<h1 class="text-center">Pinspired.</h1>

<%= link_to 'New Pin', new_pin_path, class: "btn btn-block btn-info my-3" %>

<div class="card-columns">
  <% @pins.each do |pin| %>
    <div class="card">
      <div class="card-img-top">
        <%= link_to image_tag(pin.image_url, width: '100%'), pin%>
      </div>
      <div class="card-body">
        <%= link_to pin.title, pin, class: "card-title h5" %>
      </div>
    </div>
  <% end %>
</div>
