<p id="notice"><%= notice %></p>

<h1>Pinspiration</h1>
<div>
	<% if user_signed_in? %>
		<%= link_to 'New Pin', new_pin_path %> |
		<%= link_to 'Log Out', destroy_user_session_url, method: :delete %>
	<% else %>
		<%= link_to 'Sign up', new_user_registration_url %> |
		<%= link_to 'Log In', new_user_session_url %>
	<% end %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
	    <th>Pin</th>
	    <th>Title</th>
	    <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
	      <td><img src= <%= pin.pin_url %> height="200"/></td>
	      <td><%= pin.title %></td>
	      <td><%= link_to pin.user.username, user_path(id: pin.user_id) %></td>
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>