<p id="notice"><%= notice %></p>

<h1>Pins</h1>

<%
=begin%>
 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image url</th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.title %></td>
        <td><%=image_tag pin.image_url %></td>
        <td><%= link_to 'Show', pin %></td>
        <% if user_signed_in? && pin.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       <% end %>
      </tr>
    <% end %>
  </tbody>
</table> 
<%
=end%>

<br>

<%= link_to 'New Pin', new_pin_path %>
<br>

<%= link_to 'log out', destroy_user_session_url, method: :delete %>

