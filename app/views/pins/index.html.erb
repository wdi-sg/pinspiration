<body class="teal lighten-2">
	<nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo" style="margin-left: 30px">Pinspiration</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
      	<% if user_signed_in? %>
        <li stlye="margin-right:30px"><%= link_to 'log out', destroy_user_session_url, method: :delete %></li>
        <% else %>
				<li ><%= link_to 'log in', new_user_session_url %></li>
				<% end %>
      </ul>
    </div>
  </nav>
	<div class="container" style='display:flex;flex-wrap:wrap; margin-top:30px'>
			<% @pins.each do |pin| %>
		    	<div class="cards-container" style="width:30%; padding:0px; margin: 0 10px">
			      <div class="card hoverable">
			        <div class="card-image">
			          <img src=<%= pin.imgurl %>>
			        </div>
			        <div class="card-content">
			          <p><%= pin.title %></p>
			        </div>
			        <div class="card-action" style="display:block">
			          <div class="csedbtn btn-small"><%= link_to 'Comment', new_pin_comment_path(pin) %></div>
			          <div class="csedbtn btn-small"><%= link_to 'Show', pin_path(pin) %></div>
			          <div class="csedbtn btn-small"><%= link_to 'Edit', edit_pin_path(pin) %></div>
			          <div class="csedbtn btn-small"><%= link_to 'Destroy', pin_path(pin),
	        method: :delete,
	        data: { confirm: 'Are you sure?' } %></div>
			        </div>
			      </div>
		    	</div>
	    <% end %>
  </div>
</body>