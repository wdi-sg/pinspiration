<p id="notice"><%= notice %></p>

<h1>Pins</h1>
<%= link_to 'New Pin', new_pin_path, :class => "btn btn-primary" %>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Imageurl</th>
      <th>Caption</th>
      <th>Board</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.title %></td>
        <td><%= pin.imageURL %></td>
        <td><%= pin.caption %></td>
        <td><%= pin.board.name %></td>
        <td><%= pin.user.email %></td>
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>