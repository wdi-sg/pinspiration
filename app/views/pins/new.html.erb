<%= form_with scope: :pin, url: pins_path, local: true do |form| %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>

  <p>
    <%= form.label :url %><br>
    <%= form.text_field :url %>
  </p>


  <p>
    <%= form.submit %>
  </p>


<% end %>



<%= link_to 'Back', root_path %>

<% if user_signed_in? %>
<%= link_to 'New Pin', new_pin_path %>
<% end %>
