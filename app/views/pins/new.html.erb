<div style="width:1300px; margin:0 auto;">
<h2>Add new pin</h2>

<%= form_with scope: :pin, url: pins_path, local: true do |form| %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
    <p>
    <%= form.label :media_url %><br>
    <%= form.text_field :media_url %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back', pins_path %>
</div>