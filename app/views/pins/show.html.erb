
<div class="container fluid text-center">
<h1><%= @pin.title %></h1>


<%=  image_tag @pin.image , :class =>"img-fluid" %> 
<p>Uploaded By <%= @pin.user.username %></p>

<div class="container">
<%= link_to 'Delete', pin_path(@pin),
        method: :delete,
        data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger' %> 

<%= link_to 'edit', edit_pin_path(@pin), :class => 'btn btn-secondary' %>
  <%= link_to 'Back', root_path , :class => 'btn btn-primary' %>
</div>

<hr>
<div class="container">
  <h3>Add Comment</h3>
<%= form_with model: [@pin, @comment], local: true do |f| %>  <p>
    <%= f.label :Comment %><br>
    <%= f.text_area :body, :class => 'form-control ' %>
  </p>

  <p>
    <%= f.submit 'Add a Comment', :class => 'btn btn-outline-success btn-lg' %>
  </p>
<% end %>
</div>

<h3>Comments</h3>

<% @comments.each do |comment| %>
<li class ='list-group-item'>
 <strong><%= comment.user.username %> </strong>: 
<%= comment.body %> <br>
<%= time_ago_in_words(comment.created_at)+ ' ago' unless comment.created_at.blank? %>  </li>

<% end %>

</div>





