<div class="container">

	<% header = @user.name %>

	<% if header === nil %>
		<% header = @user.email%>
	<% end %>


	<h1 class="display-4 text-center">@<%= header %></h1>


	<% time = @pin.created_at.localtime(utc_offset = nil) %>
	<div class="card text-center ml-auto mr-auto mb-5" style="width: 30rem;">
	  <img class="card-img-top" alt="image pin" src=<%= @pin.image %> >
	  <div class="card-body">
	    <h5 class="card-title"><%= @pin.title %></h5>
	    <footer class="blockquote-footer">created at <cite title="Source Title"><%= @pin.created_at.day %>/<%= @pin.created_at.month %>/<%= @pin.created_at.year %> <%= time.strftime("%I:%M %p") %></cite></footer>
	  </div>
	</div>




	<div class="text-center mb-5">
		<%= link_to 'Back', root_path, {:class => "btn btn-outline-secondary"} %>

		<%= link_to 'Edit Pin', edit_pin_path(@pin), {:class => "btn btn-outline-primary"} %>
	</div>



</div>