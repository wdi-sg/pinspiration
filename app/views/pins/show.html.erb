<body class="teal lighten-2">
	<nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo" style="margin-left: 30px">Pinspiration</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
      	<% if user_signed_in? %>
        <li stlye="margin-right:30px"><%= link_to 'log out', destroy_user_session_url, method: :delete %></li>
        <% else %>
				<li ><%= link_to 'log in', new_user_session_url %></li>
				<% end %>
      </ul>
    </div>
  </nav>
	<div class="container" style="margin-top:30px">
		<div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
        	<div class='imgcardshow'>
        		<img src=<%= @pin.imgurl %>>
        	</div>
          <span class="card-title"><%= @pin.title %></span>
        </div>
        <div class="card-action">
        	<% @comments.each do |comment| %>
        		<div class="row card hoverable" style="padding:10px">
				      <div class="col" style="2px solid black"><span><%= comment.body %></span></div>
				      <div class="col right"><span><%= link_to 'Destroy', pin_comment_path(comment),
				        method: :delete,
				        data: { confirm: 'Are you sure?' } %></span></div>
				      <div class="col right"><span><%= link_to 'Edit', edit_pin_comment_path(comment) %></span></div>
						</div>
					<% end %>
					<%= link_to 'Home page', root_path %>
        </div>
      </div>
    </div>
  </div>

	</div>
</body>