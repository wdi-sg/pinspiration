<p>
<%= link_to 'Main Pin Thing Page', root_path %>
</p>

<h1>My PinThings</h1>

<h2>Pins</h2>
<%@pins.each do |pin|%>
	<p>
	  <strong>Title:</strong>
	  <%= pin.title %>
	</p>

	<p>
	  <strong>Text:</strong>
	  <%= pin.text %>
	</p>

	<img src="<%=pin.url%>"/>
	<br/>
<%end%>

<h3>Comments</h3>
<%@comments.each do |comment|%>
	<div>
		<h4>Title: <%=comment.title%></h4>
		<h5>Comment: <%=comment.text%></h5>
		<h5>Posted: <%=comment.created_at%></h5>
	</div>
<%end%>