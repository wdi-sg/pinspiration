<div class="container">

	<% header = @user.name %>

	<% if header === nil %>
		<% header = @user.email%>
	<% end %>


	<h1 class="display-4 text-center"><%= header %></h1>

	<div class="row justify-content-center mt-5">
		<figure class="figure">
		  <img style="width: 30rem;" class="figure-img img-fluid rounded" alt="..." src=<%= @user.profile_pic %> />
		</figure>
	</div>

	<div class="text-center mb-5">
		<%= link_to 'Back', root_path, {:class => "btn btn-outline-secondary"} %>

		<%= link_to 'Edit', edit_user_path(@user), {:class => "btn btn-outline-primary"} %>
	</div>



</div>