<p id="notice"><%= notice %></p>
<h1>Pins</h1>
<div class="card-deck row">

  <% @pins.each do |pin| %>
    <div class="col-3">
    <div class="card">
      <img class="card-img-top" src=<%= pin.image%> alt="Card image cap" width="200px" height="200px">
      <div class="card-body">
        <h5 class="card-title">
          <%= pin.title %>
        </h5>
        <% @user = User.find(pin.user_id) %>
        <p class="card-text"><small class="text-muted">
          <%= @user.email %> | 
          <%= pin.created_at.getlocal.strftime("%d %B %Y, %H:%M") %> 
        </small></p>
        <p class="card-text">Comments: 
          <%= pin.comment.length %>
        </p>
        <p class="card-text">
          <%= link_to 'Show', pin %>&nbsp;
          <%= link_to 'Edit', edit_pin_path(pin) %>&nbsp;
          <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </div>
    </div>
    </div>
  <% end %>

</div>

<br>
<%= link_to 'New Pin', new_pin_path %>
